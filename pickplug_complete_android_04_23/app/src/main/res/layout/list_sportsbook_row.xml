<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingEnd="16dp"
    android:paddingStart="16dp"
    android:paddingTop="8dp">

    <LinearLayout
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginEnd="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/list_img_sportsbook"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/colorWinBg" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_txt_sportsbook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/colorGreenText"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/list_txt_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/colorDarkGrey"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/list_txt_operating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/colorDarkGrey"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/list_img_join"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_join" />

    </LinearLayout>

</LinearLayout>
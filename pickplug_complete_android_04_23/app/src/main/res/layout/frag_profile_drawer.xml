<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"
    android:clickable="true">

    <LinearLayout
        android:id="@+id/linear_drawer_profile"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/profile_bg_circle"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_profile"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/img_user_default"
            app:civ_border_color="@color/colorSelTabText"
            app:civ_border_width="5dp" />

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/drawerList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_drawer_profile"
        android:layout_marginTop="24dp"

        />

    <Button
        android:visibility="gone"
        android:paddingTop="15dp"
        android:gravity="center_horizontal"
        android:id="@+id/btn_log_out"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/img_big_yellow_btn"
        android:text="@string/btn_str_log_out"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary" />

</RelativeLayout>